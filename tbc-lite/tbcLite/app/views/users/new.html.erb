<!-- UIkit CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.5/css/uikit.min.css" />

<!-- UIkit JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.5/js/uikit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.5/js/uikit-icons.min.js"></script>
<%= csrf_meta_tags %>
<h1>New User</h1>
<div class="row">
  <div class="uk-margin-left">
    <div class="uk-inline">
      <%= form_for(@user) do |f| %>
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: "uk-input" %>

        <%= f.label :email %>
        <%= f.email_field :email,class: "uk-input" %>

        <%= f.label :password %>
        <%= f.password_field :password,class: "uk-input" %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation ,class: "uk-input"%>
        <br>
        <%= f.submit "Create my account", class: "uk-button uk-button-primary uk-margin-top" %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', sessions_new_path, class: "uk-button uk-button-primary uk-margin-left uk-margin-top" %>
</div>
